<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} --- [serviceName: transaction-service] [traceId: %X{traceId}] --- [%15.15t] %-40.40c: %m%n%ex</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="stdout" />
        <appender-ref ref="stdout"/>
    </root>
</configuration>